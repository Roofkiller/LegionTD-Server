@page 
@using LegionTDServerReborn.Models
@using LegionTDServerReborn.Extensions
@using Microsoft.AspNetCore.Html
@model BuildersModel
@{
    ViewData["Title"] = "Builders";
}

<h2>Builders</h2>

<div class='table-responsive'>
    <table class='table table-striped table-hover'>
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Pick Rate
                </th>
                <th>
                    Win Rate
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var builder in Model.Builders) {
                    <tr data-href="/Builders/@builder.FractionName" class="clickable-row">
                        <td>
                            <img src='/images/builder/@(builder.FractionName + ".png")' class="builder-icon">
                            @builder.DisplayName
                        </td>
                        <td>
                            @($"{builder.Fraction.CurrentStatistic.PickRate * 100:0.00}%")
                        </td>
                        <td>
                            @($"{builder.Fraction.CurrentStatistic.WinRate * 100:0.00}%")
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script>
        $(function () {
            $(".clickable-row").click(function() {
                    window.location = $(this).data("href");
                });
        });
    </script>
}
